{% extends 'base.html.twig' %}

{% block title %}Home page{% endblock %}
{% block page_title %}Home page{% endblock %}

{% block aside %}
    <aside id="fh5co-hero">
        <div class="flexslider">
            <ul class="slides">
                {% for c in category %}
                <li style="background-image: url({{ asset('images/img_bg_1.jpg') }});">
                    <div class="overlay-gradient"></div>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3 col-md-pull-3 slider-text">
                                <div class="slider-text-inner">
                                    <h1>{{ c.title }}</h1>
                                    <p><a class="btn btn-primary btn-learn">Learn More</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
    </aside>
{% endblock %}

{% block content %}
    <div id="fh5co-blog">
        {% for article in articles %}
            <div class="row">
                <div class="col-xl">
                    <div class="fh5co-blog animate-box">
                        <a href="#" class="blog-bg" style="background-image: url({{ asset('images/blog-1.jpg') }});"></a>
                        <div class="blog-text">
                            <span class="posted_on">Category: {% if article.category %} {{ article.category.title }} {% else %} uncategorized {% endif %} </span>
                            <h3><a href="{{ path('article_viewSingle', {'id': article.id }) }}">{{ article.title }}</a></h3>
                            <p>{{ article.description }}</p>
                            {% if app.user == article.author %}
                                <ul class="stuff">
                                    <li><a href="{{ path('article_edit', {'id': article.id }) }}">Edit<i class="icon-arrow-right22"></i></a></li>
                                </ul>
                            {% endif %}
                            <ul class="stuff">
                                <li><a href="{{ path('article_viewSingle', {'id': article.id }) }}">Read More<i class="icon-arrow-right22"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

