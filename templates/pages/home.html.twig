{% extends 'base.html.twig' %}

{% block title %}Home page{% endblock %}
{% block page_title %}Home page{% endblock %}


{% block aside %}

    <aside id="fh5co-hero">
        <div class="flexslider">
            <ul class="slides">
                {% for c in category %}
                <li style="background-image: url({{ asset('images/img_bg_1.jpg') }});">
                    <div class="overlay-gradient"></div>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3 col-md-pull-3 slider-text">
                                <div class="slider-text-inner">
                                    <h1>{{ c.title }}</h1>
                                    <p><a class="btn btn-primary btn-learn">Learn More</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
    </aside>

{% endblock %}


{% block content %}
    <div id="fh5co-blog">
        {% for a in articles %}
            <div class="row">
                <div class="col-xl">
                    <div class="fh5co-blog animate-box">
                        <a href="#" class="blog-bg" style="background-image: url({{ asset('images/blog-1.jpg') }});"></a>
                        <div class="blog-text">
                            <span class="posted_on">Feb. 15th 2016</span>
                            <h3><a href="#">{{ a.article_title }}</a></h3>
                            <p>{{ a.description }}</p>
                            <ul class="stuff">
                                <li><a href="#">Read More<i class="icon-arrow-right22"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

