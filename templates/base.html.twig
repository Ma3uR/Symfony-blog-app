<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}"/>
        {% endblock %}
    </head>
    <body>
        <div class="container">
            {% block body %}
                <header>
                    {% block header %} {# TODO: remove #}
                        <div class="logo"><a href="{{ path('front') }}">DV</a></div>
                        {% block navigation %}{# TODO: remove #}
                            <nav>
                                <ul>
                                    <li><a class="{{ app.request.get('_route') == 'front' ? 'active' }}" href="{{ path('front') }}">Home</a></li>
                                    <li><a class="{{ app.request.get('_route') == 'create' ? 'active' }}"  href="{{ path('create') }}">Create Article</a></li>
                                    <li><a class="{{ app.request.get('_route') == 'user_registration' ? 'active' }}"  href="{{ path('user_registration') }}">Registration</a></li>
                                </ul>
                            </nav>
                        {% endblock %}
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endblock %}
                </header>
                    {% block content %}

                    {% endblock %}
                <footer>
                    {% block footer %}{# TODO: remove #}
                        <h2> &copy; Default value</h2>
                    {% endblock %}
                </footer>
            {% endblock %}
        </div>
        {% block javascripts %}{% endblock %}{# TODO: remove block #}
    </body>
</html>
